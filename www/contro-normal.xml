<krpano version="1.0.8">
	<!-- ensure stagescale 2x for mobile devices (regardless if mobilescale is 0.5 or 1.0) -->
	<krpano stagescale="calc:stagescale * 2" if="stagescale LT 1.0" devices="mobile" />

	<!-- Skin Hotspot Style (the hotspots need a 'linkedscene' attribute to be clickable)-->
	<style name="skin_hotspotstyle2" url="skin/vtourskin_hotspot.png" vr_timeout="1000" zorder="1000" scale="0.5" edge="top" oy="0" onclick="pausevideo();if(linkedscene, tween(scale,0.25,0.5); tween(oy,-20,0.5); tween(alpha,0,0.5); looktohotspot(); loadscene(get(linkedscene),null,MERGE,BLEND(1));  );" />
	
	<!--
	<style name="skin_hotspotstyle" url="%SWFPATH%/images/hotspot.png" distorted="true" vr_timeout="2000" depth="2000" ty="0" onover="copy(hotspot[hs_vr_cursor2].ath,ath);copy(hotspot[hs_vr_cursor2].atv,atv);
	if(webvr.isenabled,set(hotspot[hs_vr_cursor2].visible,true));tween(depth,1000);tween(hotspot[hs_vr_cursor2].depth,1000)" onout="tween(depth,2000);tween(hotspot[hs_vr_cursor2].depth,2000)" onloaded="txtadd(myclick,'loadscene(',get(linkedscene),',',get(vars),', MERGE|KEEPVIEW|KEEPMOVING, BLEND(1))');set(onclick,get(myclick))" />
	-->
	
	<style name="skin_hotspotstyle3" url="skin/vtourskin_hotspot.png" vr_timeout="1500" depth="2000" scale="0.5" edge="top" oy="0" onover="copy(hotspot[hs_vr_cursor2].ath,ath);copy(hotspot[hs_vr_cursor2].atv,atv);
	if(webvr.isenabled,set(hotspot[hs_vr_cursor2].visible,true));tween(depth,1000);tween(hotspot[hs_vr_cursor2].depth,1000)" onout="tween(depth,2000);tween(hotspot[hs_vr_cursor2].depth,2000)" onloaded="txtadd(myclick,'loadscene(',get(linkedscene),',',get(vars),', MERGE|KEEPVIEW|KEEPMOVING, BLEND(1))');set(onclick,get(myclick))" />

	
	<textstyle name="ToolTips" 
			   font="tahoma" fontsize="12" bold="false" italic="false" textcolor="0xFFFFFF" background="true" backgroundcolor="0x000000" border="false"
			   alpha="0.85" blendmode="layer"
			   origin="cursor" edge="centertop" textalign="right" xoffset="-0" yoffset="-31"
			   showtime="0.1" fadetime="0.20" fadeintime="0.05"
			   effect="glow(0x000000,1,12,100);"
			   />
	<textstyle name="DEFAULT" 
			   font="tahoma" fontsize="12" bold="false" italic="false" textcolor="0xFFFFFF" background="true" backgroundcolor="0x000000" border="false"
			   alpha="0.85" blendmode="layer"
			   origin="cursor" edge="centertop" textalign="right" xoffset="-0" yoffset="-31"
			   showtime="0.1" fadetime="0.20" fadeintime="0.05"
			   effect="glow(0x000000,1,12,100);"
			   />
	<style	name="shab_icon" 
			css="background-image:url(skin/imamali/shab.png);background-repeat:no-repeat;background-color: transparent;color: transparent;height: 100%;width: 100%;background-size: 50%;background-position: left center;margin-left: 0vw;font-size: 3vw;"
			html="00000"
			parent="TitleName"
			url="%SWFPATH%/plugins/textfield.swf"
			align="right"
			height="100%" zorder="110" enabled="true" alpha="1"
			background="false"
			onhover="showtext(عرض النقطة ليلاً, ToolTips);"
			/>
	<style	name="ruz_icon" 
			css="background-image:url(skin/imamali/ruz.png);background-repeat:no-repeat;background-color: transparent;color: transparent;height: 100%;width: 100%;background-size: 50%;background-position: left center;margin-left: 0vw;font-size: 3vw;"
			html="00000"
			parent="TitleName"
			url="%SWFPATH%/plugins/textfield.swf"
			align="right"
			height="100%" zorder="110" enabled="true" alpha="1"
			background="false"
			onhover="showtext(عرض النقطة في النهار, ToolTips);" 
			/>

			   
			   

	<plugin name="header-2th"
	        url="skin/blank.png"
	        align="centertop"
			width="100%"
	        height="100"
	        keep="true"
	        x="0"
	        y="0"
	        scalechildren="false"
			capture="false"
	        handcursor="false"
	        zorder="11"
	        />

	<plugin name="footer-2th"
	        url="skin/blank.png"
	        align="centerbottom"
			width="100%"
	        height="69"
	        keep="true"
	        x="0"
	        y="0"
	        scalechildren="false"
			capture="false"
	        handcursor="false"
	        zorder="11"
			alpha="0.9"
	        />
	<plugin name="TitleName"
	        url="%SWFPATH%/plugins/textfield.swf"
			background="false"
			css="text-align:center;color:#ffffff; font-size:4vw;direction:rtl;background-color:rgba(30,146,196,0.9);width:100%;padding:2vw 0;"
			parent="footer-2th"
	        align="center"
			x="0"
			y="0"
	        width="0"

	        keep="true"
			selectable="false"
	        scalechildren="true"
			html="حرم امام علي عليه السلام"
			handcursor="false"
			alpha="0"
	        />
			




	<events	name="zoom_events" keep="true" onnewpano="set(plugin[TitleName].html, get(scene[get(xml.scene)].title) );"		/>


<!-- Toolbar Icons -->
	<action name="Goto-Littleplanet-View">
			set(onclick,action(Goto-Normal-View););
			set(onhover,showtext(الوضع الاعتيادي, ToolTips);set(crop,0|40|40|40););
			set(islittleplanet,true);
			set(display.flash10,off);
			set(view.stereographic,true);
			
			copy(Fits_hlookat,view.hlookat);
			copy(Fits_vlookat,view.vlookat);
			copy(Fits_fov,view.fov);
			copy(Fits_fovmax,view.fovmax);
			
			tween(view.hlookat, 0.0, 1.0);
			tween(view.fisheye, 1.0, 1.0);
			tween(view.vlookat, 90.0, 1.0);
			tween(view.fovmax, 160.0, 1.0);
			tween(view.fov, 150.0, 1.0);
	</action>
	<action name="Goto-Normal-View">
			set(onclick,action(Goto-Littleplanet-View););
			set(onhover,showtext(لقطة 360 درجة, ToolTips);set(crop,0|40|40|40););
			tween(view.fisheye, 0.0, 1.0, default, set(display.flash10,on));
			tween(view.hlookat, get(Fits_hlookat), 1.0);
			tween(view.vlookat, get(Fits_vlookat), 1.0);
			tween(view.fovmax, get(Fits_fovmax), 1.0);
			tween(view.fov, get(Fits_fov), 1.0);
	</action>

	<action name="auto-rotate">
	if(IsAutoRotate != true,
		set(IsAutoRotate,true);
		set(plugin[rotate-icon].onhover,showtext(ایقاف الدوران التلقائي, ToolTips);set(crop,0|40|40|40););
		set(plugin[rotate-icon].crop,0|0|40|40);
		set(plugin[rotate-icon].onout,set(crop,0|0|40|40););
		set(autorotate.enabled,'true');set(autorotate.waittime,0);
	,
		set(IsAutoRotate,false);
		set(plugin[rotate-icon].onhover,showtext(تشغيل الدوران التلقائي, ToolTips);set(crop,0|120|40|40););
		set(plugin[rotate-icon].crop,0|80|40|40);
		set(plugin[rotate-icon].onout,set(crop,0|80|40|40););
		set(autorotate.enabled,'false');set(autorotate.waittime,0);
	);	

	</action>
	<action name="gyro-function">
	if(IsGyro != true,
		set(IsGyro,true);
		set(plugin[gyro-icon].onhover,showtext(غيرفعال کردن ژيروسکوپ, ToolTips);set(crop,0|40|40|40););
		set(plugin[gyro-icon].crop,0|0|40|40);
		set(plugin[gyro-icon].onout,set(crop,0|0|40|40););
		set(plugin[gyro].enabled,'true');
	,
		set(IsGyro,false);
		set(plugin[gyro-icon].onhover,showtext(فعال کردن ژيروسکوپ, ToolTips);set(crop,0|0|40|40););
		set(plugin[gyro-icon].crop,0|40|40|40);
		set(plugin[gyro-icon].onout,set(crop,0|40|40|40););
		set(plugin[gyro].enabled,'false');
	);
	</action>
	

</krpano>