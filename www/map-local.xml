<krpano version="1.0.8">
<action name="Move-Map">
if(IsMapOpen != true,
	set(IsMapOpen,true);
	set(plugin[MapIcon].onhover,showtext(اغلاق المخطط, ToolTips);set(crop,0|40|40|40););
	tween(plugin[map-body].alpha, 1);
	tween(plugin[map-body].x,5);
	
	set(plugin[map-body-all-screen].enabled,true);

	set(plugin[BTN-open-map].enabled,false);
	tween(plugin[BTN-open-map].alpha, 0.0);
	tween(plugin[BTN-open-map].x, -132);
,
	set(IsMapOpen,false);
	set(plugin[MapIcon].onhover,showtext(اضهار المخطط, ToolTips);set(crop,0|40|40|40););
	tween(plugin[map-body].alpha, 0.0);
	tween(plugin[map-body].x,-323);
	
	set(plugin[map-body-all-screen].enabled,false);

	set(plugin[BTN-open-map].enabled,true);
	tween(plugin[BTN-open-map].alpha, 1.0);
	tween(plugin[BTN-open-map].x, 0);
);	

</action>
<include url="%SWFPATH%/map-plan-local.xml"/>
<action name="hidemap-all">
Move-Map();
</action>
<layer	name="map_btn_home"
		url="images/vtour-demo/map.png"
		align="lefttop"
		x="-7"
		y="0"
		keep="true" 
		maskchildren="false"
		scalechildren="false"
		handcursor="true"
		capture="true"
		zorder="3000"
		width="70" height="63"
		onclick="showmap"
		/>


<plugin name="map-body-all-screen" onclick="showmap" enabled="false" url="skin/blank.png" align="lefttop" x="0" y="0" keep="true" maskchildren="true" scalechildren="false" handcursor="false" capture="false" zorder="10000" width="100%" height="100%"/>

<plugin name="map-body" url="skin/blank.png" align="lefttop" x2="5" x="-323" y="30" keep="true" maskchildren="true" scalechildren="false" handcursor="false" capture="false" zorder="10001" width="323" height="345"/>
<plugin name="map-background-front" url="skin/imamali/map-back.png" parent="map-body" align="lefttop" x="0" y="0" keep="true" maskchildren="false" scalechildren="false" handcursor="false" capture="false" zorder="10001" width="325" height="345" blendmode="normal"/>
<plugin name="map-view" url="skin/imamali/all-map.png" parent="map-background-front" align="lefttop" x="1" y="20" keep="true" maskchildren="false" scalechildren="false" handcursor="false" capture="false" zorder="10004" width="323" height="323" blendmode="normal" alpha="1"/>
<plugin name="map-view-shab" url="skin/imamali/all-map.png" parent="map-background-front" align="lefttop" x="1" y="20" keep="true" maskchildren="false" scalechildren="false" handcursor="false" capture="false" zorder="10004" width="323" height="323" blendmode="normal" alpha="0" enabled="false"/>
<plugin name="map-view-radar" url="skin/blank.png" parent="map-background-front" align="lefttop" x="1" y="20" keep="true" maskchildren="false" scalechildren="false" handcursor="false" capture="false" zorder="10003" width="323" height="323" blendmode="normal" alpha="1" enabled="false"/>
<action name="showmap">
Move-Map();
</action>
